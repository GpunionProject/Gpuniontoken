
## <summary>policy for gpunion</summary>


########################################
## <summary>
##	Transition to gpunion.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`gpunion_domtrans',`
	gen_require(`
		type gpunion_t, gpunion_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, gpunion_exec_t, gpunion_t)
')


########################################
## <summary>
##	Execute gpunion server in the gpunion domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`gpunion_initrc_domtrans',`
	gen_require(`
		type gpunion_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, gpunion_initrc_exec_t)
')


########################################
## <summary>
##	Search gpunion lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`gpunion_search_lib',`
	gen_require(`
		type gpunion_var_lib_t;
	')

	allow $1 gpunion_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read gpunion lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`gpunion_read_lib_files',`
	gen_require(`
		type gpunion_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, gpunion_var_lib_t, gpunion_var_lib_t)
')

########################################
## <summary>
##	Manage gpunion lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`gpunion_manage_lib_files',`
	gen_require(`
		type gpunion_var_lib_t;
	')

	files_search_var_lib($1)
	manage_files_pattern($1, gpunion_var_lib_t, gpunion_var_lib_t)
')

########################################
## <summary>
##	Manage gpunion lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`gpunion_manage_lib_dirs',`
	gen_require(`
		type gpunion_var_lib_t;
	')

	files_search_var_lib($1)
	manage_dirs_pattern($1, gpunion_var_lib_t, gpunion_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	a gpunion environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`gpunion_admin',`
	gen_require(`
		type gpunion_t;
		type gpunion_initrc_exec_t;
		type gpunion_var_lib_t;
	')

	allow $1 gpunion_t:process { ptrace signal_perms };
	ps_process_pattern($1, gpunion_t)

	gpunion_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 gpunion_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, gpunion_var_lib_t)

')

